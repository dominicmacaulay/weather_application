<p style="color: green"><%= notice %></p>

<%= render @location %>

<div>
  <b><u>Specific Location</u></b><br>
  <i><%= @specific_location %></i>
</div>

<% @weather.each do |weather| %>
  <p>
    <%= weather %>
  </p>
<% end %>

<div>
  <%= link_to "Edit this location", edit_location_path(@location) %> |
  <%= link_to "Back to your locations", locations_path %>

  <%= button_to "Destroy this location", @location, method: :delete %>
</div>
